<script>
        function DengLu() {
            var select = $("#select1").val();
            var data = { UsersName: $("#txtName").val(), UsersPwd: $("#txtPwd").val(), UsersState:parseInt( select) };
            $.ajax({
                url: "http://localhost:52083/Doctor/Register",
                type: "post",
                contentType: "application/json;charset=UTF-8",
                data: JSON.stringify(data),
               dataType:"json",
                success: function (h) {
                    if (h.id > 0) {
                        alert("登录成功");
                        if (h.usersxinxi = 1) {
                            //跳用户界面
                        }
                        if (h.usersxinxi = 2) {
                            //跳医生界面
                            location.href = '/Doctor/Index?id=' + h.usersxinxi;
                        }
                        if (h.usersxinxi = 3) {
                            //跳管理员界面
                        }
                    }
                    else {
                        alert("登陆失败！");
                        location.href = "/Doctor/Login";
                    }
                }
            })
        }
</script>
