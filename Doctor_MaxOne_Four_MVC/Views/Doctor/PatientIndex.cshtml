<script>
        var a=0;
        UseridToPatientId();
        ShowDepartments();
    //用户id 患者的
    localStorage.setItem("usersid", @ViewBag.PatientIndexId);
    var user = localStorage.getItem("usersid");


    //获取患者的id
    function UseridToPatientId() {

        $.ajax({
            url: "http://localhost:52083/Doctor/LoginIdPatientId?id="+@ViewBag.PatientIndexId,
            type: "get",
            async:true,
            success: function (h) {
                console.log(h);
                $(h).each(function () {
                    localStorage.setItem("key", this.patientID);
                    var lastname = localStorage.getItem("key");
                    a=this.patientID
                })
            }
        })
    }
    //显示科室
    function ShowDepartments() {
        $.ajax({
            url: "http://localhost:52083/Doctor/PatientShowDepartment",
            type: "get",
            async:true,
            success: function (h) {

                $("#div").empty();
                $(h).each(function () {
                    var a = "";
                    if (this.departmentsId%3==0) {
                        a = "<br />";
                    }
                    $("#div").append(""
                        + "<a value='" + this.departmentsId + "' onclick='Department("+this.departmentsId+")'>" + this.departmentsname + "</a>"
                        + "&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;"
                        + "&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;"
                        + "&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;"
                        + "&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;"
                        + "&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;"
                        + "&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;"
                        +""+a+""
                        + "");
                })

            }
        })
    }
    //点击科室进入医院的页面
    function Department(id) {
        location.href = '/Doctor/DepartmentToHostal?id='+id+"&PatientId="+a;
        }
        //找名医
        function zhao() {
            location.href = '/Doctor/LoogFamousDoctor?id='+a;
        }
        //公益手术
